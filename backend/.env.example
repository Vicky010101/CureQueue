# MongoDB Connection String
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
# For local: mongodb://localhost:27017/curequeue
MONGO_URI=your_mongodb_connection_string_here

# Server Port (automatically assigned by cloud platforms)
PORT=5000

# JWT Secret Key for Authentication (use a strong random string in production)
JWT_SECRET=your_secure_jwt_secret_key_here

# Email Configuration (for notifications - optional)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_or_app_password

# Node Environment
NODE_ENV=development
